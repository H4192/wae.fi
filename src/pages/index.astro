---
import { ImageSupportDetection } from 'astro-imagetools/components'

import Banner from '../components/banner.astro';
import Navbar from '../components/navbar/navbar.astro';

import HolistiSection from '../components/section/holisti/index.astro';
import ServerSection from '../components/section/servers/index.astro';
import DiscordSection from '../components/section/discord.astro';
import MemberSection from '../components/section/members.astro';

import Footer from '../components/footer.astro';

// CSS
import '../styles/global.css';
---
<!DOCTYPE html>
<html lang="fi-FI">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">
		<title>WAEverything</title>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#04c2ff">
    <meta name="msapplication-TileColor" content="#111827">
    <meta name="theme-color" content="#111827">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet"> 

    <ImageSupportDetection />
	</head>

	<body>
    <Banner />
    <Navbar />

    <HolistiSection />
    <ServerSection />
    <DiscordSection />
    <MemberSection />

    <Footer />

    <script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
	</body>
</html>
